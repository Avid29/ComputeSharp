<Project>

  <!-- Get the analyzer from the ComputeSharp.Pix NuGet package -->
  <Target Name="_ComputeSharpPixLinkNativeLibraries">
    <PropertyGroup>

      <!-- PIX version (this needs to be kept in sync with the one in the .csproj) -->
      <WinPixEventRuntimeVersion>winpixeventruntime.1.0.220124001</WinPixEventRuntimeVersion>

      <!-- Detect whether the target project is UWP-->
      <ShouldUnpackUapPixNativeLibraries>false</ShouldUnpackUapPixNativeLibraries>
      <ShouldUnpackUapPixNativeLibraries Condition="'$(TargetPlatformIdentifier)' == 'UAP'">true</ShouldUnpackUapPixNativeLibraries>

      <!-- Detect the target project CPU architecture -->
      <ShouldUnpackArm64PixNativeLibraries>false</ShouldUnpackArm64PixNativeLibraries>
      <ShouldUnpackArm64PixNativeLibraries Condition="'$(Platform)' == 'arm64'">true</ShouldUnpackArm64PixNativeLibraries>
    </PropertyGroup>

    <!-- Win32, x64 -->
    <ItemGroup Condition="'$(ShouldUnpackUapPixNativeLibraries)' == 'False' AND '$(ShouldUnpackArm64PixNativeLibraries)' == 'False'">
      <None Include="$(MSBuildThisFileDirectory)..\$(WinPixEventRuntimeVersion)\x64\WinPixEventRuntime.dll"
            Link="WinPixEventRuntime.dll"
            Visible="False"
            CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <!-- Win32, arm64 -->
    <ItemGroup Condition="'$(ShouldUnpackUapPixNativeLibraries)' == 'False' AND '$(ShouldUnpackArm64PixNativeLibraries)' == 'True'">
      <None Include="$(MSBuildThisFileDirectory)..\$(WinPixEventRuntimeVersion)\arm64\WinPixEventRuntime.dll"
            Link="WinPixEventRuntime.dll"
            Visible="False"
            CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <!-- UWP, x64 -->
    <ItemGroup Condition="'$(ShouldUnpackUapPixNativeLibraries)' == 'True' AND '$(ShouldUnpackArm64PixNativeLibraries)' == 'False'">
      <None Include="$(MSBuildThisFileDirectory)..\$(WinPixEventRuntimeVersion)\x64\WinPixEventRuntime_UAP.dll"
            Link="WinPixEventRuntime.dll"
            Visible="False"
            CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <!-- UWP, arm64 -->
    <ItemGroup Condition="'$(ShouldUnpackUapPixNativeLibraries)' == 'True' AND '$(ShouldUnpackArm64PixNativeLibraries)' == 'True'">
      <None Include="$(MSBuildThisFileDirectory)..\$(WinPixEventRuntimeVersion)\arm64\WinPixEventRuntime_UAP.dll"
            Link="WinPixEventRuntime.dll"
            Visible="False"
            CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>
  </Target>
</Project>
