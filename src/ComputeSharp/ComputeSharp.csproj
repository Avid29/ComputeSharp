<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <PackFolder>lib\$(TargetFramework)</PackFolder>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ComputeSharp.Shaders\ComputeSharp.Shaders.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Libraries\dxcompiler.dll"
          Link="dxcompiler.dll"
          Visible="False"
          CopyToOutputDirectory="PreserveNewest"
          PackFolder="runtimes\win-x64\native" />
    <None Include="Libraries\dxil.dll"
          Link="dxil.dll"
          Visible="False"
          CopyToOutputDirectory="PreserveNewest"
          PackFolder="runtimes\win-x64\native" />
  </ItemGroup>

</Project>
